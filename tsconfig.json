{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "CommonJS",
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "types": ["jest", "node"],
      "noImplicitAny": false,
    },
    "include": ["src", "api"]
  }
  